{
    "type": "module",
    "scripts": {
        "postinstall": "cd ./test && npm i || true",
        "test": "cd ./test && npm run test",
        "build": "echo \"Dummy build script for Autocode\"",
        "compile": "npm run sass:build && npm run sass:minify",
        "build:css": "npm run compile",
        "sass:build": "sass src/styles/style.scss src/dist/style.css",
        "sass:minify": "sass src/styles/style.scss src/dist/style.min.css --style compressed",
        "sass:watch": "sass --watch src/styles:src/dist",
        "lint:js": "eslint src/js/**/*.js",
        "lint:scss": "stylelint src/styles/**/*.scss",
        "lint": "npm run lint:js && npm run lint:scss",
        "api": "json-server --watch db/db.json --port 3000",
        "dev": "vite"
    },
    "devDependencies": {
        "eslint": "^8.57.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.32.0",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "json-server": "^1.0.0-beta.3",
        "sass": "^1.97.0",
        "stylelint": "^16.26.1",
        "stylelint-config-standard-scss": "^16.0.0",
        "vite": "^7.3.0"
    }
}